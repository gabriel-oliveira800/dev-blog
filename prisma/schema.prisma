datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

model User {
  id String @id @default(uuid())

  name       String
  github_id  Int
  login      String
  avatar_url String

  followers    Int
  following    Int
  public_repos Int

  role       Role     @default(USER)
  created_at DateTime @default(now())

  Follow Follow[]

  @@map("users")
}

model Follow {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  created_at DateTime @default(now())

  @@map("follows")
}
