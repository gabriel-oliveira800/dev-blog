datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @default(uuid())

  name       String
  github_id  Int
  login      String
  avatar_url String

  posts Post[]

  @@map("users")
}

model Post {
  id String @id @default(uuid())

  title   String
  content String?
  images  String[]

  user   User   @relation(fields: [userId], references: [id])
  userId String

  comments Comment[]

  @@map("posts")
}

model Comment {
  id String @id @default(uuid())

  text   String
  userId String

  Post   Post   @relation(fields: [postId], references: [id])
  postId String
}
